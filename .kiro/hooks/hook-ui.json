        ]
      }
    },
    "category_section": {
      "template": {
        "layout": "vertical",
        "components": [
          {
            "type": "header",
            "layout": "horizontal",
            "components": [
              {
                "type": "icon",
                "source": "category.icon",
                "size": "small"
              },
              {
                "type": "title",
                "source": "category.name",
                "style": "semibold"
              },
              {
                "type": "counter",
                "source": "category.hook_count",
                "style": "badge"
              }
            ]
          },
          {
            "type": "hook_list",
            "source": "category.hooks",
            "item_template": "hook_item"
          }
        ]
      }
    },
    "activity_item": {
      "template": {
        "layout": "horizontal",
        "components": [
          {
            "type": "timestamp",
