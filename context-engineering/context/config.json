{
  "project": {
    "name": "Collective Memory",
    "version": "2.1.0",
    "description": "AI-powered context management and search system",
    "architecture": "Context Engineering Template",
    "framework": "Context7 Glassmorphism"
  },
  
  "environment": {
    "development": {
      "api_url": "http://localhost:8000",
      "frontend_url": "http://localhost:3008",
      "debug": true,
      "hot_reload": true
    },
    "production": {
      "api_url": "https://api.collective-memory.app",
      "frontend_url": "https://collective-memory.app",
      "debug": false,
      "hot_reload": false
    }
  },
  
  "performance": {
    "thresholds": {
      "api_response_time": 500,
      "search_response_time": 100,
      "memory_usage_mb": 512,
      "cpu_usage_percent": 70,
      "cache_hit_rate": 80,
      "bundle_size_mb": 5
    },
    "optimization": {
      "enable_caching": true,
      "enable_compression": true,
      "enable_lazy_loading": true,
      "enable_code_splitting": true
    }
  },
  
  "features": {
    "context7_framework": {
      "enabled": true,
      "glassmorphism": true,
      "dark_mode": true,
      "responsive": true,
      "animations": true
    },
    "turkish_ui": {
      "enabled": true,
      "locale": "tr-TR",
      "date_format": "turkish",
      "number_format": "turkish",
      "currency": "TRY"
    },
    "prompt_relationships": {
      "enabled": true,
      "similarity_threshold": 0.6,
      "max_suggestions": 5,
      "context_suggestions": true
    },
    "semantic_search": {
      "enabled": true,
      "model": "all-MiniLM-L6-v2",
      "max_results": 50,
      "relevance_threshold": 0.3
    },
    "analytics": {
      "enabled": true,
      "track_searches": true,
      "track_performance": true,
      "track_user_behavior": false
    },
    "export": {
      "enabled": true,
      "formats": ["markdown", "json", "text"],
      "max_file_size_mb": 10
    }
  },
  
  "database": {
    "type": "sqlite",
    "path": ".collective-memory/database/app_database.db",
    "backup_enabled": true,
    "backup_interval_hours": 24,
    "optimization": {
      "vacuum_interval_hours": 168,
      "analyze_interval_hours": 24,
      "wal_mode": true,
      "cache_size_mb": 100
    }
  },
  
  "search": {
    "indexing": {
      "auto_index": true,
      "file_types": [".md", ".txt", ".py", ".js", ".jsx", ".ts", ".tsx", ".json"],
      "exclude_patterns": ["node_modules", ".git", "dist", "build", "__pycache__"],
      "max_file_size_mb": 50,
      "batch_size": 100
    },
    "ranking": {
      "title_weight": 2.0,
      "content_weight": 1.0,
      "filename_weight": 1.5,
      "path_weight": 0.5,
      "recency_weight": 0.3
    }
  },
  
  "ui": {
    "theme": {
      "default": "context7-glassmorphism",
      "colors": {
        "primary": "#667eea",
        "secondary": "#764ba2",
        "accent": "#f093fb",
        "success": "#10b981",
        "warning": "#f59e0b",
        "error": "#ef4444",
        "info": "#3b82f6"
      },
      "glass": {
        "opacity": 0.1,
        "blur": "10px",
        "border_opacity": 0.2
      }
    },
    "layout": {
      "sidebar_width": 250,
      "header_height": 80,
      "content_padding": 24,
      "card_radius": 12,
      "button_radius": 8
    },
    "animations": {
      "transition_duration": "0.3s",
      "hover_scale": 1.02,
      "hover_lift": "2px",
      "loading_animation": "pulse"
    }
  },
  
  "testing": {
    "playwright": {
      "enabled": true,
      "browsers": ["chromium", "firefox", "webkit"],
      "headless": true,
      "timeout": 30000,
      "screenshot_on_failure": true
    },
    "api": {
      "enabled": true,
      "timeout": 10000,
      "retry_count": 3,
      "mock_data": false
    },
    "performance": {
      "enabled": true,
      "lighthouse": false,
      "bundle_analysis": true,
      "memory_profiling": false
    }
  },
  
  "monitoring": {
    "health_check": {
      "enabled": true,
      "interval_seconds": 30,
      "endpoints": ["/health", "/system/status"],
      "alert_threshold_failures": 3
    },
    "metrics": {
      "enabled": true,
      "collect_system_metrics": true,
      "collect_app_metrics": true,
      "retention_days": 30
    },
    "logging": {
      "level": "INFO",
      "file_enabled": true,
      "console_enabled": true,
      "max_file_size_mb": 10,
      "backup_count": 5
    }
  },
  
  "security": {
    "authentication": {
      "enabled": false,
      "type": "local",
      "session_timeout_minutes": 60
    },
    "cors": {
      "enabled": true,
      "allowed_origins": ["http://localhost:3000", "http://localhost:3008"],
      "allowed_methods": ["GET", "POST", "PUT", "DELETE"],
      "allowed_headers": ["Content-Type", "Authorization"]
    },
    "input_validation": {
      "enabled": true,
      "max_query_length": 1000,
      "sanitize_html": true,
      "rate_limiting": {
        "enabled": true,
        "requests_per_minute": 100
      }
    }
  },
  
  "deployment": {
    "docker": {
      "enabled": true,
      "image_name": "collective-memory",
      "tag": "latest",
      "ports": {
        "api": 8000,
        "frontend": 3008
      }
    },
    "build": {
      "optimization": true,
      "minification": true,
      "source_maps": false,
      "compression": "gzip"
    }
  },
  
  "integration": {
    "cursor_ai": {
      "enabled": true,
      "database_paths": [
        "~/Library/Application Support/Cursor/User/workspaceStorage/",
        "%APPDATA%/Cursor/User/workspaceStorage/",
        "~/.config/Cursor/User/workspaceStorage/"
      ],
      "sync_interval_minutes": 5
    },
    "git": {
      "enabled": true,
      "track_commits": true,
      "ignore_patterns": [".git", "node_modules", "dist"]
    },
    "vscode": {
      "enabled": false,
      "extension_support": false
    }
  },
  
  "experimental": {
    "ai_features": {
      "enabled": true,
      "auto_tagging": false,
      "content_summarization": false,
      "smart_categorization": false
    },
    "collaboration": {
      "enabled": false,
      "real_time_sync": false,
      "shared_workspaces": false
    },
    "mobile": {
      "enabled": false,
      "pwa_support": true,
      "offline_mode": false
    }
  },
  
  "maintenance": {
    "auto_cleanup": {
      "enabled": true,
      "old_logs_days": 30,
      "old_backups_days": 90,
      "temp_files_hours": 24
    },
    "updates": {
      "check_for_updates": true,
      "auto_update": false,
      "beta_channel": false
    }
  }
} 